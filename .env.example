# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=enterprise_navigation
DB_USER=root
DB_PASSWORD=password
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Favicon Service Configuration
FAVICON_CACHE_TTL=86400
FAVICON_TIMEOUT=5000

# CORS Configuration 部署时改为实际的前端地址即可
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Default Configuration Overrides
# JSON string with groups and links (see src/models/interfaces.ts)
DEFAULT_CONFIGURATION_JSON=
DEFAULT_CONFIGURATION_NAME=Default Enterprise Configuration
DEFAULT_CONFIGURATION_DESCRIPTION=Default configuration applied to new users

# Favicon Fallback Configuration
FAVICON_DEFAULT_ICON_PATH=/uploads/icons/default-favicon.svg
FAVICON_FALLBACK_ICONS=/uploads/icons/website-icon.svg,/uploads/icons/link-icon.svg,/uploads/icons/globe-icon.svg
FAVICON_EXTERNAL_FALLBACKS=https://www.google.com/s2/favicons?domain={domain}&sz=128,https://icons.duckduckgo.com/ip3/{domain}.ico
